<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PTSD_sym_buttons">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/cloudystars"
        android:layout_width="714dp"
        android:layout_height="1230dp"
        android:src="@drawable/cloudystars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579">

    </pl.droidsonroids.gif.GifImageView>

    <Button
        android:id="@+id/symIntrusive"
        android:layout_width="185dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#48CAE4"
        android:text="Intrusive memories"
        android:textColor="#0B0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/symAviod"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#48CAE4"
        android:text="Avoidance"
        android:textColor="#120101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symIntrusive" />

    <Button
        android:id="@+id/symChanTM"
        android:layout_width="184dp"
        android:layout_height="87dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#48CAE4"
        android:text="Negative changes in thinking and mood"
        android:textColor="#130101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symAviod" />

    <Button
        android:id="@+id/symChanPER"
        android:layout_width="190dp"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#48CAE4"
        android:text="Changes in physical and emotional reactions"
        android:textColor="#120101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symChanTM" />

    <Button
        android:id="@+id/symIntensity"
        android:layout_width="184dp"
        android:layout_height="68dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#48CAE4"
        android:text="Intensity of symptoms"
        android:textColor="#1C0106"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symChanPER"
        app:layout_constraintVertical_bias="0.032" />

</androidx.constraintlayout.widget.ConstraintLayout>